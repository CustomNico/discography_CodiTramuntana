<p id="notice"><%= notice %></p>

<h1>Artists</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>LPs</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @artists.each do |artist| %>
      <% @plural_form = artist.lps.length == 1 ? 'LP' : 'LPs' %>
      <% @current_lps = artist.lps.length.to_s %>
      <% @joint_string = @current_lps +" "+ @plural_form %>
      <tr>
        <td class="name"><%= link_to artist.name, artist %></td>
        <td class="other"><%=  @joint_string %> </td>
        <td class="description"><%= artist.description %></td>
        
        <td><%= link_to 'Edit', edit_artist_path(artist), class: "btn btn-large btn-warning" %></td>
        <td><%= link_to 'Destroy', artist, class: "btn btn-large btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Artist', new_artist_path, class: "btn btn-large btn-success" %>
